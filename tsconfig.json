{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "strictFunctionTypes": true,
    "strictNullChecks": true,
    "strict": true,
    "declaration": true,
    "noFallthroughCasesInSwitch": true,
    "target": "es6",
    "moduleResolution": "node",
    "strictPropertyInitialization": true,
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "lib": [
      "es6",
      "es2015"
    ]
  },
  "files": [
    "./app.ts"
  ],
  "exclude": [
    "./node_modules"
  ]
}
